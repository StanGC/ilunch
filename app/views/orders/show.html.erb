<div class="container">
  <div class="col-md-12">

    <h2> 訂單明細 </h2>
    <h3> 店家 <%= @event.menu_name %> </h3>
    <h3> 時間 <%= @event.date %></h3>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明細</th>
          <th>單價</th>
          <th>數量</th>
        </tr>
      </thead>
      <tbody>

        <% @order_items.each do |order_item| %>
          <tr>
            <td>
              <%= order_item.food_name %>
            </td>
            <td>
              <%= order_item.price %>
            </td>
            <td>
              <%= order_item.quantity %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        總計 <%= @order.total %> NTD
      </span>
    </div>

     <hr>

     <h2> 訂購資訊 </h2>

     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            備註
          </td>
        </tr>
        <tr>
          <td>
            <%= @order_info.note %>
          </td>
        </tr>
        <tr>
          <td>
            訂購者
          </td>
        </tr>
        <tr>
          <td>
            <%= @order_info.user_name %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
