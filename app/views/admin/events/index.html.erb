<section class="content-header">
  <h1>
  目前狀況
  </h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>日期</th>
                  <th>店家</th>
                  <th>已點餐人數</th>
                  <th>當前總額</th>
                  <th>狀態</th>
                </tr>
              </thead>
              <tbody>
                <% @events.each do |event| %>
                <tr>
                  <td>
                    <%= event.date %>
                  </td>
                  <td>
                    <%= event.menu_name %>
                  </td>
                  <td>
                    <div class="progress">
                      <div class="progress-bar progress-bar-success progress-bar-striped" style="width: <%= number_to_percentage(event.now_progress) %>">(<%= event.order_finish %>)</div>
                    </td>
                    <td>
                      共計：<%= event.total %>
                    </td>
                    <th>
                      <% if event.status? %>
                      <%= link_to '查看點餐情況', admin_event_path(event) %>
                      <% else %>
                      <%= link_to '已結單', admin_event_path(event) %>
                      <% end %>
                    </th>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
      </div>
      <div class="text-center">
        <%= will_paginate @events, renderer: BootstrapPagination::Rails %>
      </div>
    </section>
