<h2>使用者列表</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>日期</th>
      <th>店家</th>
      <th>點餐</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td>
          <%= event.date %>
        </td>
        <td>
          <%= event.menu_name %>
        </td>
        <td>
          <%= link_to '查看點餐情況', admin_event_path(event) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
