<!DOCTYPE html>
<html>
  <head>
    <title>DD53 後台</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= favicon_link_tag ('logos/mario.ico') %>
    <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'admin', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body class="hold-transition skin-blue">
    <!-- Site wrapper -->
    <div class="wrapper">
      <header class="main-header">
        <!-- Logo -->
        <a href="<%= admin_events_path %>" class="logo">
          <!-- mini logo for sidebar mini 50x50 pixels -->
          <span class="logo-mini"><b>KT</b>O</span>
          <!-- logo for regular state and mobile devices -->
          <span class="logo-lg"><b>KT</b>Order</span>
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top">
          <!-- Sidebar toggle button-->
          <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <div class="navbar-custom-menu">

            <ul class="nav navbar-nav">

              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  目前群組 : <%= current_team.name %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <% current_user.teams.each do |team| %>
                  <li>
                    <%= link_to team.name, url_for( :subdomain => team.domain ) %>
                  </li>
                  <% end %>
                </ul>
              </li>
              <li>
                <%= link_to '網站首頁', root_path %>
              </li>
            </ul>
          </div>
        </nav>
      </header>
      <!-- =============================================== -->
      <!-- Left side column. contains the sidebar -->
      <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
          <!-- Sidebar user panel -->
          <div class="user-panel">
            <div class="pull-left image">
              <%= image_tag ("kt_logo.png")%>
            </div>
            <div class="pull-left info">
              <p>KT</p>
            </div>
          </div>
          <!-- sidebar menu: : style can be found in sidebar.less -->
          <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <li>
              <a href="<%= admin_select_path %>">
                <i class="fa fa-glass"></i> <span>開啟訂餐任務</span>
              </a>
            </li>
            <li>
              <a href="<%= admin_events_path %>">
                <i class="fa fa-tasks"></i> <span>目前狀況</span>
              </a>
            </li>
            <li>
              <a href="<%= admin_menus_path %>">
                <i class="fa fa-plus"></i> <span>菜單管理</span>
              </a>
            </li>
            <li>
              <a href="<%= admin_users_path %>">
                <i class="fa fa-user"></i> <span>使用者管理</span>
              </a>
            </li>
            <li>
              <a href="<%= admin_invite_path %>">
                <i class="fa fa-envelope"></i> <span>邀請新成員</span>
              </a>
            </li>
          </li>
        </ul>
      </section>
      <!-- /.sidebar -->
    </aside>
    <!-- =============================================== -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <%= yield %>
    </div>
    <!-- /.content-wrapper -->
  </div>
  <!-- ./wrapper -->
</body>
</html>
