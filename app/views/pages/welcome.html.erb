<!-- Header -->
<a name="about"></a>
<div class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>就讓DD53幫您訂訂午餐</h1>
                    <h3>Don't get any trouble on lunch</h3>
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons">

                    <% if !current_user %>
                        <li>
                            <a href="<%= new_user_registration_path %>" class="btn btn-default btn-lg"><i class="fa fa-users fa-fw"></i> <span class="network-name">立即建立你的專屬群組</span></a>
                        </li>
                        <% else %>
                        <%= link_to 'new team', new_team_path %>
                        <% end %>
                        或是？
                        <% if !current_user %>
                        <li>
                            <a href="/signin" class="btn btn-default btn-lg"><i class="fa fa-sign-in fa-fw"></i> <span class="network-name">登入群組</span></a>
                        </li>
                        <% else %>
                        <% if current_user.teams.present? %>
                        <li>
                            <%= link_to root_url(:subdomain => find_last_team.domain ), class: 'btn btn-default btn-lg' do %>
                            <i class="fa fa-sign-in fa-fw"></i> <span class="network-name">前往<%= find_last_team.name %></span>
                            <% end %>
                        </li>
                        <% end %>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</div>
<!-- /.intro-header -->
