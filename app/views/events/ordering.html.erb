<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2> 今日所吃 <%= @menu.title %></h2>
      <% if @menu.photo.present? %>
      <%= image_tag(@menu.photo.image.thumb.url) %>
      <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
      <% end %>
    </div>
    <div class="col-xs-6">
      <h2> 菜單總覽 </h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>食物</th>
            <th>價錢</th>
            <th>數量</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @menu.foods.each do |food| %>
            <td><%= food.name %></td>
            <td>
              <%if food.price.blank? %>
              <% food.food_subs.each do |sub| %>
              <div>
                <%= sub.description %>/<%= sub.price %>
              </div>
              <% end %>
              <% else %>
              <%= food.price %>
              <% end %>
            </td>
            <td>
              <%if food.price.blank? %>
              <% food.food_subs.each do |sub| %>
              <%= button_to("＋", event_add_multi_to_cart_path(@event,food.id,sub.id), method: :post,
              class: "btn btn-danger btn-xs") %>
              <% end %>
              <% else %>
              <%= button_to("＋", event_add_to_cart_path(@event,food.id), method: :post,
              class: "btn btn-danger btn-xs") %>
              <% end %>
            </td>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-xs-6">
    <h2> 您的預定
    <span class="badge"> 總計 <%= render_cart_total_price(current_cart) %> NTD  </span>
    <small class="pull-right"> <%= link_to("清空所有選項", clean_carts_path ,
    method: :delete , class: "btn btn-primary btn-sm",
    data: { confirm: "你確定要清空整個購物車嗎？"} )%></small>
    </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品資訊</th>
          <th>單價</th>
          <th>數量</th>
          <th>操作選項 </th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |food| %>
        <tr>
          <td>
            <%= food.name%>
          </td>
          <td>
            <%= food.price %>
          </td>
          <td>
            <%= food.quantity %>
          </td>
          <td>
            <%= link_to item_path(food), method: :delete do %>
            刪除
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to("確認訂餐", checkout_carts_path, method: :post, class: "btn btn-danger pull-right") %>
    <small> <%= link_to '放棄點餐', to_abandon_event_path, method: :post ,
    data: { confirm: "你確定要放棄這次點餐？出門外面買很熱！而且我還沒有做餐點修改的功能！！你放棄就沒辦法在點了XDD！真的要放棄嗎？"} %></small>
  </div>
</div>
