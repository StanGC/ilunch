<div id="price-table">
  <div class="box box-widget text-center">
    <div class="box-header with-border">
      <h3 class="box-title">您的預定</h3>
    </div>
    <div class="box-body">
      <span class="pull-left badge"> 總計 <%= render_cart_total_price(current_cart) %> NTD  </span>
      <small class="pull-right"> <%= link_to("清空所有選項", clean_carts_path ,
      method: :delete, remote: :true, class: "btn btn-primary btn-sm",
      data: { confirm: "你確定要清空整個購物車嗎？"} )%></small>
      </h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品資訊</th>
            <th>單價</th>
            <th>數量</th>
            <th>操作選項 </th>
          </tr>
        </thead>
        <tbody>
          <% current_cart.cart_items.each do |item| %>
          <tr>
            <td>
              <%= item.name %>
            </td>
            <td>
              <%= item.price %>
            </td>
            <td>
              <%= simple_form_for item, url: item_path(item), class: "form-horizontal", remote: true do |f| %>
              <%= f.input :quantity, collection: 1..15,label: false, class: 'form-control' %>
              <% end %>
            </td>
            <td>
              <%= link_to item_path(item), method: :delete, remote: :true do %>
              刪除
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
