<h2>Account Activation</h2>

<%= simple_form_for resource, :as => resource_name, :url => update_user_confirmation_path, :html => {:method => 'patch'}, :id => 'activation-form' do |f| %>
  <fieldset>
  <%# f.error_notification %>
  <%# f.full_error :confirmation_token %>

  <div class="form-inputs">
   <% if @requires_password %>
      <p><%= f.label :password,'Choose a Password:' %> <%= f.password_field :password %></p>
      <p><%= f.label :password_confirmation,'Password Confirmation:' %> <%= f.password_field :password_confirmation %></p>
  <% end %>

  </div>




  <%= hidden_field_tag :confirmation_token, params[:confirmation_token] %>

    <div class="form-actions">
    <%= f.button :submit, "Activate" %>
  </div>

  </fieldset>
<% end %>
