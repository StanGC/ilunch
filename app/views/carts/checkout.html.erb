<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-widget">
      <!-- /.box-header -->
      <div class="box-body">
                  <legend>餐點明細</legend>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品資訊</th>
              <th>單價</th>
              <th>數量</th>
            </tr>
          </thead>
          <tbody>
            <% current_cart.items.each do |food| %>
            <tr>
              <td>
                <%= food.name%>
              </td>
              <td>
                <%= food.price %>
              </td>
              <td>
                <% item = current_cart.cart_items.find_by(food_id: food) %>
                <%= item.quantity %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="total clearfix">
          <span class="pull-right">
            總計 <%= render_cart_total_price(current_cart) %> NTD
          </span>
        </div>
        <div class="order-form">
          <%= simple_form_for @order do |f| %>
          <%= f.simple_fields_for :info do |c| %>
          <legend>訂購人</legend>
          <div class="form-group col-lg-12">
            <%= c.input :user_name, label: '暱稱', placeholder: '填一下你是誰好嗎'  %>
          </div>
          <div class="form-group col-lg-12">
            <%= c.input :note, label: '備註', placeholder: '飯少、飯多、要辣、等特殊需求可以寫這邊^_^'   %>
          </div>
          <% end %>
          <div class="checkout">
            <%= f.submit "確定就訂這些了", class: "btn btn-lg btn-danger pull-right",
            data: { disable_with: "Submitting..." } %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
