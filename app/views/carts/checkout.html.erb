  <h2> 您的預定 </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品資訊</th>
          <th>單價</th>
          <th>數量</th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.items.each do |food| %>
          <tr>
            <td>
              <%= food.name%>
            </td>
            <td>
              <%= food.price %>
            </td>
            <td>
             <% item = current_cart.cart_items.find_by(food_id: food) %>
            <%= item.quantity %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        總計 <%= render_cart_total_price(current_cart) %> NTD
      </span>
    </div>

    <hr>

    <h2> 訂單資訊 </h2>

    <div class="order-form">

      <%= simple_form_for @order do |f| %>

        <%= f.simple_fields_for :info do |c| %>

          <legend> 訂購人</legend>
          <div class="form-group col-lg-6">
            <%= c.input :user_name  %>
          </div>
          <div class="form-group col-lg-6">
            <%= c.input :note  %>
          </div>

        <% end %>
        <div class="checkout">
          <%= f.submit "生成訂單", class: "btn btn-lg btn-danger pull-right",
                       data: { disable_with: "Submitting..." } %>
        </div>
      <% end %>

    </div>
  </div>
</div>
